<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><% if task.try(:title).nil?%> <%=""%> <%else%> <%=task.title%><%end%></td>
        <td><% if task.try(:status).nil?%> <%=""%> <%else%> <%=task.status%><%end%></td>
        <td><% if task.try(:employee).nil?%> <%=""%> <%else%> <%=Employee.find(task.employee).email %><%end%></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

